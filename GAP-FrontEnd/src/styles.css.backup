/* Force lower z-index for all tables and checkboxes */
.table-responsive,
.table,
cdk-virtual-scroll-viewport,
.cdk-virtual-scroll-viewport {
  position: relative;
  z-index: 1 !important;
}

table tbody tr,
table tbody tr td,
.table input[type="checkbox"],
input[type="checkbox"] {
  position: relative;
  z-index: 1 !important;
}

/* Ensure modal backdrop is above everything except modal */
.modal-backdrop {
  z-index: 1040 !important;
}

/* Ensure all modals are above backdrop */
.modal {
  z-index: 1050 !important;
}
                  <groupId>org.apache.tomcat.maven</groupId>
                  <artifactId>tomcat7-maven-plugin</artifactId>
                  <version>2.2</version>
                  <configuration>
                      <url>://192.168.77.17:8080/manager/text</url>
                      <server>TomcatServer</server> &lt;!&ndash; Assurez-vous que ce serveur est d√©fini dans votre settings.xml &ndash;&gt;
                      <path>/SC</path>
                      <update>true</update>

                  </configuration>
              </plugin>-->


			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<url>http://localhost:8081/manager/text</url>
					<!--          <server>TomcatServer</server>-->
					<server>new-tomcat-war-deployment</server>
					<path>/GAP-BACKEND</path>
					<update>true</update>
				</configuration>
			</plugin>



			<!--             <plugin>

                            <groupId>org.apache.tomcat.maven</groupId>
